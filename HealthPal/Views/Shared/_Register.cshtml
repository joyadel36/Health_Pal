<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthPal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/HealthPal.styles.css" asp-append-version="true" />
    <style>

        body {
            margin:0;
            padding:0;
            margin-bottom: 0 !important;
        }
    </style>
</head>
<body>
    <div class="m-0 p-0 vh-100 position-relative">
        <img height="100%" width="100%" src="~/img/carousel-1.jpg"/>
        <main role="main" class="position-absolute" style="float:left;top:0;left:100px">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
