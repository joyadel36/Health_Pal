@model IEnumerable<HealthPal.Models.Specialist>

@{
    ViewData["Title"] = "GetAllSpecialists";
}

<h1>GetAllSpecialists</h1>

<p>
    <a asp-action="CreateSpecialist">Create New</a>
</p>
<h1 class="text-center fw-bold text-primary">Specialties</h1>

<div class="d-flex flex-wrap gap-3 justify-content-center">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="data:image/png;base64,@Convert.ToBase64String(item.Image)" alt="Specialist Image" class="card-img-top" />
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <a asp-controller="Doctor" asp-action="GetDoctorsInSpecialist" asp-route-id="@item.ID" class="btn btn-primary">Go Doctors</a>
            </div>
        </div>
    }
</div>
